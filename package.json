{
    "name": "debugger-for-edge",
    "displayName": "Debugger for Edge",
    "version": "0.4.1",
    "icon": "images/icon.png",
    "description": "Debug your JavaScript code in the Edge browser.",
    "repository": {
        "type": "git",
        "url": "https://github.com/Microsoft/vscode-edge-debug"
    },
    "publisher": "msjsdiag",
    "bugs": "https://github.com/microsoft/vscode-edge-debug/issues",
    "engines": {
        "vscode": "*"
    },
    "categories": [
        "Debuggers"
    ],
    "license": "MIT",
    "dependencies": {
        "source-map": "^0.5.3",
        "ws": "0.8.0",
        "edge-diagnostics-adapter": "0.3.2",
        "vscode-chrome-debug-core": "3.12.8"
    },
    "devDependencies": {
        "@types/node": "^6.0.40",
        "gulp": "^3.9.0",
        "gulp-mocha": "^2.1.3",
        "gulp-sourcemaps": "^1.5.2",
        "gulp-tslint": "^3.3.1",
        "gulp-typescript": "^3.1.6",
        "gulp-util": "^3.0.5",
        "mocha": "^2.3.3",
        "mockery": "^1.4.0",
        "sinon": "^1.17.2",
        "tslint": "^2.5.1",
        "typescript": "^2.3.3"
    },
    "scripts": {
        "test": "node ./node_modules/mocha/bin/mocha --recursive -u tdd ./out/test/"
    },
    "contributes": {
        "debuggers": [
            {
                "type": "edge",
                "label": "Edge",
                "enableBreakpointsFor": {
                    "languageIds": [
                        "javascript",
                        "typescriptreact"
                    ]
                },
                "program": "./out/src/edgeDebug.js",
                "runtime": "node",
                "aiKey": "AIF-d9b70cd4-b9f9-4d70-929b-a071c400b217",
                "initialConfigurations": [
                    {
                        "name": "Launch index.html",
                        "type": "edge",
                        "request": "launch",
                        "file": "${workspaceRoot}/index.html"
                    },
                    {
                        "name": "Launch localhost with sourcemaps",
                        "type": "edge",
                        "request": "launch",
                        "url": "http://localhost/mypage.html",
                        "sourceMaps": true,
                        "webRoot": "wwwroot"
                    },
                    {
                        "name": "Attach",
                        "type": "edge",
                        "request": "attach",
                        "port": 9222
                    }
                ],
                "configurationAttributes": {
                    "launch": {
                        "required": [],
                        "properties": {
                            "file": {
                                "type": "string",
                                "description": "A local html file to open in the browser",
                                "default": "index.html"
                            },
                            "url": {
                                "type": "string",
                                "description": "A url to open in the browser",
                                "default": "http://mysite.com/index.html"
                            },
                            "cwd": {
                                "type": "string",
                                "description": "DEPRECATED - renamed to webRoot",
                                "default": "."
                            },
                            "webRoot": {
                                "type": "string",
                                "description": "When the 'url' field is specified, this specifies the workspace relative or absolute path to the webserver root.",
                                "default": "."
                            },
                            "runtimeExecutable": {
                                "type": [
                                    "string",
                                    "null"
                                ],
                                "description": "Workspace relative or absolute path to the runtime executable to be used. If not specified, Edge will be used from the default install location.",
                                "default": null
                            },
                            "runtimeArgs": {
                                "type": "array",
                                "description": "Optional arguments passed to the runtime executable.",
                                "items": {
                                    "type": "string"
                                },
                                "default": []
                            },
                            "sourceMaps": {
                                "type": "boolean",
                                "description": "Use JavaScript source maps (if they exist).",
                                "default": true
                            },
                            "diagnosticLogging": {
                                "type": "boolean",
                                "description": "When true, the adapter logs its own diagnostic info to the console",
                                "default": false
                            }
                        }
                    },
                    "attach": {
                        "required": [
                            "port"
                        ],
                        "properties": {
                            "port": {
                                "type": "number",
                                "description": "Port to use for Edge remote debugging.",
                                "default": 9222
                            },
                            "sourceMaps": {
                                "type": "boolean",
                                "description": "Use JavaScript source maps (if they exist).",
                                "default": true
                            },
                            "diagnosticLogging": {
                                "type": "boolean",
                                "description": "When true, the adapter logs its own diagnostic info to the console",
                                "default": true
                            },
                            "cwd": {
                                "type": "string",
                                "description": "DEPRECATED - renamed to webRoot",
                                "default": "."
                            },
                            "webRoot": {
                                "type": "string",
                                "description": "When the 'url' field is specified, this specifies the workspace relative or absolute path to the webserver root.",
                                "default": "."
                            },
                            "url": {
                                "type": "string",
                                "description": "The url already open in Edge to attach to. Exact matches only.",
                                "default": "http://mysite.com/index.html"
                            }
                        }
                    }
                }
            }
        ]
    }
}